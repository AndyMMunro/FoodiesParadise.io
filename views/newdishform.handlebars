<div class="container">
    <div class="row">

        <div class="container">
            <div class="row">
                <div class="col-md-9 col-7"></div>
                <button class="col-md-2 col-5 btn btn-dark backBtn" type="button" id="button-addon2">Go Back</button>
            </div>
        </div>

        <div class="col-lg-2"></div>
        <section class="col-lg-8 col-12 newReview">
            <h2>Add a Dish Review</h2>
            <hr>

            <form id="createReview">
            <div class="form-group">
                <label for="exampleFormControlInput1">Dish name</label>
                <input type="text" class="newDish form-control" id="exampleFormControlInput1" placeholder="Pizza">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Restaurant name</label>
                <input type="text" class="newRestaurant form-control" id="exampleFormControlInput1" placeholder="Sizzle Pie">
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Rate the Dish (1=Awful; 5=Best Dish Ever)</label>
                <select class="newRating form-control" id="exampleFormControlSelect1">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Write your review</label>
                <textarea class="newComments form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>

            <button class="btn btn-dark submitReviewBtn col-3" type="submit" id="button-addon2">Submit Review</button>
            </form>
        </section>

        <div class="col-lg-2"></div>
    </div>
</div>
