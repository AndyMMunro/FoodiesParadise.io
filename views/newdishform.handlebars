<div class="container">
    <div class="row">

        <div class="container">
            <div class="row">
                <div class="col-md-9 col-7"></div>
                <button class="col-md-2 col-5 btn btn-dark backBtn" type="button" id="button-addon2">Go Back</button>
            </div>
        </div>

        <div class="col-lg-2"></div>
        <section class="col-lg-8 col-12 newReview">
            <h2>Add a Dish Review</h2>
            <hr>

            <form id="createReview">
            <div class="form-group">
                <label for="newDish">Dish name</label>
                <input type="text" id="newDish" class="form-control" placeholder="Pizza">
            </div>
            <div class="form-group">
                <label for="newRestaurant">Restaurant name</label>
                <input type="text" id="newRestaurant" class="form-control" placeholder="Sizzle Pie">
            </div>
            <div class="form-group">
                <label for="newRating">Rate the Dish (1=Awful; 5=Best Dish Ever)</label>
                <select id="newRating" class="form-control" >
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="newComments">Write your review</label>
                <textarea class="form-control" id="newComments" rows="3"></textarea>
            </div>

            <button class="btn btn-dark submitReviewBtn col-3" type="submit" id="">Submit Review</button>
            </form>
        </section>

        <div class="col-lg-2"></div>
    </div>
</div>
